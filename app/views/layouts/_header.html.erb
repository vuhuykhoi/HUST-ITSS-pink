<% if current_page?(root_path) || current_page?("/") %>
  <header class="">
<% else %>
  <header class="black-header">
<% end %>
    <nav class="navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-3">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to image_tag("new_logo.png", alt: "logo", class: "img-responsive pull-left img-logo logo-web resize-logo"), root_path %>
            </div>
            <div class="collapse navbar-collapse navbar" id="navbar-collapse-3">
                <ul class="nav navbar-nav navbar-left">
                    <li><%= link_to t("Hotels"), "#" %></li>
                    <li><%= link_to t("Destination"), "#" %></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="li-number">
                        <a href=""><span class="fa fa-phone text-violet"></span><%= Settings.telephone %></a>
                    </li>
                    <li class="header-login-register">
                      <% if user_signed_in? %>
                        <%= link_to t("Profile"), edit_user_registration_url %>
                        <%= link_to t("My Schedules"), user_schedules_path(current_user)%>
                        <%= link_to t("logout"), destroy_user_session_path, method: :delete %>
                      <% else %>
                        <%= link_to t("login"), new_user_session_path %>
                        <%= link_to t("signup"), new_user_registration_path %>
                      <% end %>
                    </li>
                </ul>
                <div class="collapse nav navbar-nav nav-collapse" id="nav-collapse3">
                    <form class="navbar-form navbar-right" role="search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search" />
                        </div>
                        <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                    </form>
                </div>
            </div>
        </div>
    </nav>
</header>